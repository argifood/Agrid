<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.SplashActivity"
    xmlns:tools="http://schemas.android.com/tools">


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/a_splash_vertical_gl_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.15" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/a_splash_vertical_gl_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.85" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/a_splash_horizontal_gl_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.2" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/a_splash_horizontal_gl_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.3" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/a_splash_horizontal_gl_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.35" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/a_splash_horizontal_gl_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.65" />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:textSize="50sp"
        android:fontFamily="sans-serif-condensed"
        tools:text="Welcome"
        android:text="@string/welcome"
        app:autoSizeTextType="uniform"
        app:layout_constraintStart_toStartOf="@id/a_splash_vertical_gl_1"
        app:layout_constraintEnd_toEndOf="@id/a_splash_vertical_gl_2"
        app:layout_constraintTop_toTopOf="@id/a_splash_horizontal_gl_1"
        app:layout_constraintBottom_toBottomOf="@id/a_splash_horizontal_gl_2"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:gravity="center"
        android:src="@drawable/logo"
        app:layout_constraintStart_toStartOf="@id/a_splash_vertical_gl_1"
        app:layout_constraintEnd_toEndOf="@id/a_splash_vertical_gl_2"
        app:layout_constraintTop_toTopOf="@id/a_splash_horizontal_gl_3"
        app:layout_constraintBottom_toBottomOf="@id/a_splash_horizontal_gl_4"
        />




</androidx.constraintlayout.widget.ConstraintLayout>